{% extends "LicenseBundle::layout.html.twig" %}

{% block content %}

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Edycja rezerwacji</h3>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            {%if error%}<b><div style="color: red;">Błędny zakres dat</b></div>{%endif%}
                        <br />
                        <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="#" method="post">
                            {%if is_granted('ROLE_PM')%}
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.idUzytkownik) }} <span class="required">*</span>
                                        {{ form_errors(form.idUzytkownik) }}
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        {{ form_widget(form.idUzytkownik) }}
                                    </div>
                                </div>
                            {%endif%}

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    {{ form_label(form.dataOd) }} 
                                    <span class="required">*</span>{{ form_errors(form.dataOd) }}
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-6">

                                    {{form_widget(form.dataOd)}}
                                    <span id="inputSuccess2Status4" class="sr-only">(success)</span>
                                </div>
                            </div>
                            {%if is_granted('ROLE_PM')%}
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                        {{ form_label(form.dataDo) }} 
                                        <span class="required">*</span>{{ form_errors(form.dataDo) }}
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-6">

                                        {{form_widget(form.dataDo)}}
                                    </div>
                                </div>

                            {% endif %}
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button type="reset" class="btn btn-primary">Wyczyść</button>
                                    {{ form_widget(form.save) }}
                                </div>
                                <div style="display:none;">
                                    {{ form_rest(form) }}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}