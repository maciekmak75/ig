{% extends "LicenseBundle::layout.html.twig" %}

{% block content %}

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">

                    <h3>Historia licencji{%if lic.typ%} ProEngineer: {%else%} Catii: {%endif%} {{lic.nazwa}}</h3>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2></h2>
                            <div class="input-group">
                                {#<button type="button" class="btn btn-success" data-toggle="modal" data-target=".bs-example-modal-lg">Dodaj licencjÄ™</button>#}
                            </div>

                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <td>Lp.</td>
                                        <td>Od kiedy</td>
                                        <td>Do kiedy</td>
                                        <td>Kto</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for dane in entities  if entities|length != 0 %}
                                        <tr>
                                            <td>{{ loop.index}}</td>
                                            <td>{{dane.dataOd|date('d-m-Y')}}</td>
                                            <td>{{dane.dataDo|date('d-m-Y')}}</td>
                                            <td>{{dane.idUzytkownik.__toString()}}</td>

                                        </tr>

                                    {% endfor %}  
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

