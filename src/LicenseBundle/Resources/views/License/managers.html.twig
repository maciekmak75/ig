{% extends "LicenseBundle::layout.html.twig" %}

{% block content %}

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">

                    <h3>Lista kierowników/PM</h3>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2></h2>
                            <div class="input-group">
                                <button type="button" class="btn btn-success" data-toggle="modal" data-target=".bs-example-modal-lg">Dodaj osobę</button>
                            </div>

                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <td>Osoba</td>
                                        <td>Akcja</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for dane in entities  if entities|length != 0 %}
                                        <tr>
                                            <td>{{ dane.__toString()}}</td>
                                            <td>
                                    <center>
                                        <a class="dropdown-toggle" title="Usuń z listy" data-toggle="dropdown" role="button" aria-expanded="false" onclick="window.location.href = '{{path('KierownikDel', {'idUz': dane.id |urlencrypt})}}'"><i class="fa fa-close"></i></a>
                                    </center>
                                    </td>
                                    </tr>

                                {% endfor %}  
                                </tbody>
                            </table>
                        </div>
                        <div class="modal fade bs-example-modal-lg" role="dialog" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <form data-parsley-validate class="form-horizontal form-label-left" action="#" method="post">
                                        {{ form_row(form._token) }}
                                        <div class="error">
                                            {{ form_errors(form) }}
                                        </div>
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span>
                                            </button>
                                            <h4 class="modal-title" id="myModalLabel2">Dodaj osobę</h4>
                                        </div>

                                        <div class="modal-body">

                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.idUzytkownik) }} <span class="required">*</span>
                                                    {{ form_errors(form.idUzytkownik) }}
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    {{ form_widget(form.idUzytkownik) }}
                                                </div>
                                            </div>


                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
                                            {{ form_widget(form.save) }}
                                        </div>
                                        <div style="display:none;">
                                            {{ form_rest(form) }}
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

