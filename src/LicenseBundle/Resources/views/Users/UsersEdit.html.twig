{% extends "LicenseBundle::layout.html.twig" %}

{% block content %}

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Edycja użytkownika</h3>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <br />
                            <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="#" method="post">
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="{{ form.imie.vars.id }}">{{form_label(form.imie)}}<span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        {{form_widget(form.imie)}}
                                        {{form_errors(form.imie)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="{{ form.nazwisko.vars.id }}">{{form_label(form.nazwisko)}}<span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        {{form_widget(form.nazwisko)}}
                                        {{form_errors(form.nazwisko)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="{{ form.mail.vars.id }}">{{form_label(form.mail)}}<span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        {{form_widget(form.mail)}}
                                        {{form_errors(form.mail)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.role) }} <span class="required">*</span>
                                        {{ form_errors(form.role) }}
                                    </label>

                                    <div class=" col-md-6 col-sm-6 col-xs-12 ">

                                        {{form_widget(form.role[0], {'attr': {'class':'flat'} }) }}
                                        {{form_label(form.role[0])}}
                                        {{form_widget(form.role[1], {'attr': {'class':'flat'} }) }}
                                        {{form_label(form.role[1])}}
                                        {{form_widget(form.role[2], {'attr': {'class':'flat'} }) }}
                                        {{form_label(form.role[2])}}

                                    </div>
                                </div>

                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button type="reset" class="btn btn-primary">Wyczyść</button>
                                        {{ form_widget(form.save) }}
                                    </div>
                                    <div style="display:none;">
                                        {{ form_rest(form) }}
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}