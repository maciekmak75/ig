{% extends "LicenseBundle::layout.html.twig" %}

{% block content %}

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Zmiana hasła</h3>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">

                        <div class="x_content">
                            <br />
                            <form data-parsley-validate class="form-horizontal form-label-left" action="#" method="post">
                                {{ form_start(form) }}
                                {{ form_row(form._token) }}
                                <div class="error">
                                    {{ form_errors(form) }}
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ form_label(form.stareHaslo) }} <span class="required">*</span>

                                        {{ form_errors(form.stareHaslo) }}

                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        {{ form_widget(form.stareHaslo) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ form_label(form.noweHaslo) }} <span class="required">*</span>

                                        {{ form_errors(form.noweHaslo) }}

                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        {{ form_widget(form.noweHaslo) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{{ form_label(form.powtorzHaslo) }} <span class="required">*</span>

                                        {{ form_errors(form.powtorzHaslo) }}

                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        {{ form_widget(form.powtorzHaslo) }}
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button type="reset" class="btn btn-primary">Wyczyść</button>
                                        {{ form_widget(form.save) }}
                                    </div>
                                </div>



                                <div style="display:none;">
                                    {{ form_rest(form) }}
                                </div>
                                {{ form_end(form) }}

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

